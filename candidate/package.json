{
  "dependencies": {
    "@prisma/client": "^5.3.0",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jwt-decode": "^3.1.2",
    "pg": "^8.11.3",
    "prisma": "^5.3.1",
    "zod": "^3.22.4"
  },
  "description": "Candidate management microservice",
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.7",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.13.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "zod-fixture": "^2.5.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/candidate.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/dist/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": ["database", "routes", "schemas", "index", "dao"]
  },
  "license": "UNLICENSED",
  "main": "src/index.ts",
  "name": "candidate-management",
  "packageManager": "pnpm@8.7.5",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "private": true,
  "scripts": {
    "biome": "biome check --apply-unsafe . && biome format --write .",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "migrate": "npx prisma migrate dev --name init",
    "migrate:deploy": "npx prisma migrate deploy",
    "start": "npx prisma generate && node build/index.js",
    "test": "jest --coverage"
  },
  "version": "0.0.0"
}
